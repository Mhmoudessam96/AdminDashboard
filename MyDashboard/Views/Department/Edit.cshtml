@model MyDashboard.BL.Models.DepartmentVM

@{
    ViewData["Title"] = "Edit";

}


<br />

<a asp-action="Index" asp-controller="Department" class="btn btn-primary">@SharedLocalizer["BTDD"]</a>

<br />
<br />
<form asp-action="Edit" asp-controller="Department" class="form-group">

    <br />
    <div asp-validation-summary="All" class="text-danger"></div>
    <br />

    <input type="hidden" asp-for="Id" />

    <label asp-for="DepartmentName">@SharedLocalizer["DN"]</label>
    <input type="text" class="form-control" asp-for="DepartmentName" />
    <span asp-validation-for="DepartmentName" class="text-danger"></span>
    <br />

    <label asp-for="DepartmentCode">@SharedLocalizer["DC"]</label>
    <input type="text" class="form-control" asp-for="DepartmentCode" />
    <span asp-validation-for="DepartmentCode" class="text-danger"></span>

    <br />

    <center>
        <input type="submit" value="@SharedLocalizer["Edit"]" class="btn btn-primary" />
        <input type="reset" value="@SharedLocalizer["Cancle"]" class="btn btn-danger" />
    </center>

</form>


@section ClientValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}