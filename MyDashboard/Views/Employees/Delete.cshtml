@model MyDashboard.BL.Models.EmployeeVM

@{
    ViewData["Title"] = "Delete";

}


<br />

<a asp-action="Index" asp-controller="Department" class="btn btn-primary">Back To Employees Data</a>

<br />
<br />
<form asp-action="Delete" asp-controller="Employees" class="form-group">

    <label asp-for="@SharedLocalizer["Id"]">Id</label>
    <input class="form-control" type="text" asp-for="Id"  disabled/>

    <label asp-for="Name">@SharedLocalizer["EN"]</label>
    <input type="text" class="form-control" asp-for="Name" disabled />
    <label asp-for="HireDate">@SharedLocalizer["EHD"]</label>
    <input type="text" class="form-control" asp-for="HireDate" disabled />
    <label asp-for="Email">@SharedLocalizer["EE"]</label>
    <input type="text" class="form-control" asp-for="Email" disabled />
    <br />  

    <center>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </center>


</form>


